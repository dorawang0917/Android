<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.17"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/linearLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Group:"
            android:id="@+id/textView13"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="28dp"
            android:visibility="invisible" />

        <Spinner
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Theme"
        android:id="@+id/textView12"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp"
        android:layout_below="@+id/linearLayout6"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.17"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/button"
        android:id="@+id/linearLayout8"
        android:layout_below="@+id/textView14"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"
        android:layout_marginTop="24dp">

        <Button
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:id="@+id/reading"
            android:background="@drawable/button_reading"
            android:layout_margin="24dp"
            android:gravity="center" />

        <Button
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:id="@+id/sleep"
            android:background="@drawable/button_sleep"
            android:gravity="center"
            android:layout_margin="24dp"
            android:textSize="28dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:id="@+id/movie"
            android:background="@drawable/button_movie"
            android:layout_margin="24dp"
            android:gravity="center"
            android:textSize="28dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.17"
        android:orientation="vertical"
        android:id="@+id/linearLayout7"
        android:background="@drawable/button"
        android:layout_below="@+id/textView15"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:layout_marginTop="24dp">

        <Button
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:id="@+id/meal"
            android:background="@drawable/button_meal"
            android:gravity="center"
            android:layout_margin="24dp"
            android:textSize="28dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:id="@+id/break_"
            android:background="@drawable/button_break"
            android:gravity="center"
            android:layout_margin="24dp"
            android:textSize="28dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:id="@+id/round"
            android:background="@drawable/button_round"
            android:layout_margin="24dp"
            android:gravity="center"
            android:textSize="28dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.17"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="745dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1"
            android:id="@+id/test1"
            android:background="@drawable/button"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test2"
            android:id="@+id/test2"
            android:background="@drawable/button"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test3"
            android:id="@+id/test3"
            android:background="@drawable/button"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="roundtest"
            android:id="@+id/roundtest"
            android:background="@drawable/button"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Living Room"
        android:id="@+id/textView14"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/linearLayout8"
        android:layout_alignEnd="@+id/linearLayout8"
        android:textColor="#ff00c3e0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lounge Bar"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignLeft="@+id/linearLayout7"
        android:layout_alignStart="@+id/linearLayout7"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:textColor="#ff00c3e0" />

</RelativeLayout>